{
	"name": "site",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint . && stylelint \"**/*.{css,scss,svelte}\"",
		"lint:fix": "prettier --write . && eslint . --fix && stylelint \"**/*.{css,scss,svelte}\" --fix",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.5",
		"@storybook/addon-essentials": "^8.6.4",
		"@storybook/addon-interactions": "^8.6.4",
		"@storybook/addon-svelte-csf": "^5.0.0-next.11",
		"@storybook/blocks": "^8.6.4",
		"@storybook/svelte": "^8.6.4",
		"@storybook/sveltekit": "^8.6.4",
		"@storybook/test": "^8.6.4",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/enhanced-img": "^0.4.4",
		"@sveltejs/kit": "^2.19.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/eslint": "^9.6.1",
		"@unpic/svelte": "^1.0.0",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.1.0",
		"globals": "^16.0.0",
		"mdsvex": "^0.12.3",
		"postcss-html": "^1.8.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"storybook": "^8.6.4",
		"stylelint": "^16.19.1",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-config-standard-scss": "^15.0.1",
		"svelte": "^5.22.6",
		"svelte-check": "^4.1.5",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"vite": "^6.2.1"
	}
}
